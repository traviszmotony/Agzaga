<div class="featured-categories-holder featured-carousel">
  <div id="featured-categories" class="owl-carousel owl-theme home-page-slider">

    <% @all_gift_products.each do |product| %>
      <div class="item">
        <a href="<%= product_path(product) %>" class="clear-link">
          <div class="img-holder black-deals-holder">
            <%= image_tag( image_cdn_link(product.gallery.images.first.url(:small)), alt: product.name, class: 'black-deals-card', loading: 'lazy' ) if product.gallery.images.present? %>
          </div>
        </a>

        <p>
          <%= link_to "#{product.name}", spree::product_path(product), class: 'clear-link deals-bold-text' %>
        </p>
      </div>
    <% end %>
  </div>
</div>

