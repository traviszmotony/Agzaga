<% reviews.each do |review| %>
  <div class="review-show-section">
    <div class="review-title-description-section">
      <div class="review-data">
        <div class="product-stars">
          <div class="stars">
            <input
                name = "review[rating]"
                class="rating"
                max="5"
                oninput="this.style.setProperty('--value', `${this.valueAsNumber}`)"
                step="0.5"
                style="--value:<%= review.rating %>"
                type="range" class="rating_star" disabled>
          </div>
        </div>
        <div class="review-date">
          <%= review.created_at.strftime("%m/%d/%y") %>
        </div>
      </div>

      <div class="product-review-title">
        <%= review.title%>
      </div>
      <div class="product-review-images">
        <% review.images.each do |review_image| %>
          <a href="<%= review_image.url(:original) %>">
            <div class="product-card-image-container">
              <%= image_tag review_image.url(:original), class: 'product-review-image', alt: '' %>
            </div>
          </a>
        <% end %>

      </div>

      <div class="product-review-description">
        <%= raw(review.review) %>
      </div>
    </div>

    <div class="product-review-verified-customer">
      <div class="product-review-verified-customer-name">
        <%=review.name%>
      </div>

      <div class="product-review-verified-customer-icon">
        <div class="product-review-vc-icon">
