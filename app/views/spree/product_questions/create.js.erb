<% if @product_question.errors.present? %>
  $('.questioner-name-error').html('<%= @product_question.errors.full_messages.first %>')
                              .css('display', 'block');
  $('.question-required-error').html('Question cant be empty')
                              .css('display', 'block');                            
  $('.question-field').addClass('validation-error');
  $('.question-submit-btn').addClass('disable_btn').removeClass('btn-gradient-orange');
  $('.question-submit-btn').prop("disabled", true);
  $('.product-questioner-name').addClass("error-questioner");
<% else %>
  $(".body").html("<%= j render partial: 'spree/products/partials/thanks_for_question', locals: { product: @product } %>");
<% end %>

