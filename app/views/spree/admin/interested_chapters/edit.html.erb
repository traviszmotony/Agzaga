
<% content_for :page_title do %>
  Interested Chapters / <%= @interested_chapter.name %>
<% end %>

<% content_for :table_filter_title do %>
  Edit
<% end %>

<% content_for :table_filter do %>
  <div data-hook="admin_email_logs_index_search">
    <%= form_for @interested_chapter, url: admin_interested_chapter_path, method: :patch do |f| %>
      <div class="row">
        <div class="col-6">
          <div class="field">
            <%= f.label "Name" %>
            <%= f.text_field :name %>
            <% if @interested_chapter.errors.messages.key?(:name) %>
              <span style="color: red"><%= @interested_chapter.errors[:name][0]%></span>
            <% end %>
          </div>
        </div>

        <div class="col-6">
          <div class="field">
            <%= f.label "First Name" %>
            <%= f.text_field :first_name %>
            <% if @interested_chapter.errors.messages.key?(:first_name) %>
              <span style="color: red"><%= @interested_chapter.errors[:first_name][0]%></span>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-6">
          <div class="field">
            <%= f.label "Last Name" %>
            <%= f.text_field :last_name %>
            <% if @interested_chapter.errors.messages.key?(:last_name) %>
              <span style="color: red"><%= @interested_chapter.errors[:last_name][0]%></span>
            <% end %>
          </div>
        </div>

        <div class="col-6">
          <div class="field">
            <%= f.label "Email" %>
            <%= f.text_field :email %>
            <% if @interested_chapter.errors.messages.key?(:email) %>
              <span style="color: red"><%= @interested_chapter.errors[:email][0]%></span>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-6">
          <div class="field">
            <%= f.label "Phone Number" %>
            <%= f.text_field :phone_number %>
            <% if @interested_chapter.errors.messages.key?(:phone_number) %>
              <span style="color: red"><%= @interested_chapter.errors[:phone_number][0]%></span>
            <% end %>
          </div>
        </div>

        <div class="col-6">
          <div class="field">
            <%= f.label "State" %>
              <%= f.collection_select :state, @allowed_states, :abbr, :abbr, {include_blank: false} , {class: 'ffa-approved-states custom-select'} %>
              <% if @interested_chapter.errors.messages.key?(:state) %>
                <span style="color: red"><%= @interested_chapter.errors[:state][0]%></span>
              <% end %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-6">
          <div class="field">
            <%= f.label "Postal Code" %>
            <%= f.text_field :postal_code %>
            <% if @interested_chapter.errors.messages.key?(:postal_code) %>
              <span style="color: red"><%= @interested_chapter.errors[:postal_code][0]%></span>
            <% end %>
          </div>
        </div>
      </div>


      <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button_tag t('spree.actions.update'), class: 'btn btn-primary' %>
        <%= link_to t('spree.actions.cancel'), admin_interested_chapters_url, class: 'button' %>
      </div>

    <% end %>
  </div>
<% end %>

