<%= render partial: 'spree/shared/error_messages', locals: { target: @spree_user } %>
<div class="new-password-section">
  <div class="content">
    <div class="header">
      <div class="title">Letâ€™s Reset Your Password.</div>
    </div>

    <div class="body">
      <div class="header">
        <div class="title">Enter a New Password</div>
      </div>

      <%= form_for @spree_user, as: :spree_user, url: spree.update_password_path, method: :put do |f| %>
        <div id="new-password-credentials">

          <div class="form-group">
            <div class="ag-input-neutral shipping-email">
              <div class="ag-input-group-box email-validation">
                <%= f.password_field :password, required: true, class: "ag-input-field form-control",  placeholder: "New Password", id: "password"%>

                <div class="ag-input-icon-append">
                  <div data-field='password' id="password-icon" class="secure-password"></div>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="ag-input-neutral shipping-email">
              <div class="ag-input-group-box email-validation">
                <%= f.password_field :password_confirmation, required: true, class: "ag-input-field form-control",  placeholder: "Re-Enter New Password", id: "confirm-password"%>

                <div class="ag-input-icon-append">
                  <div data-field='confirm-password' id="confirm-password-icon" class="secure-password"></div>
                </div>
              </div>
              <span id='confirm-pass-message' class="error-message"></span>
            </div>
          </div>
        </div>

        <%= f.hidden_field :reset_password_token %>

        <div class="update-password">
          <%= f.button 'Update Password', type: 'submit', id: 'update-password-btn', class: 'ag-btn ag-btn-primary ag-btn-md' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'spree/shared/setting_account', content: t("spree.update_user_information") %>

